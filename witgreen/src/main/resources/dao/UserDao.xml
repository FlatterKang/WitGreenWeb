<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.witgreen.iot.dao.UserDao">
    <select id="findUserByName" resultType="com.witgreen.iot.bean.User">
    SELECT * FROM user WHERE name = #{username}
    </select>

    <select id="findUserInforById" resultType="com.witgreen.iot.bean.User">
    SELECT * FROM user WHERE id = #{id}
    </select>

</mapper>
